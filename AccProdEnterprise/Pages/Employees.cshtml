@page
@model AccProdEnterprise.Pages.Employees
@{
}
<div class="d-flex">
    
    <a class="btn mb-2 " style="background-color:cadetblue; color:white" asp-page="AddEmployee">Add employee</a>
</div>

<div class="card shadow mb-2 ">
    @foreach(var item in Model.EmployeesList)
    {
    
    <div class="col">
        <div class="card shadow text-dark bg-light m-3" style="">
               
            <div class="card-body border">
                <div class="col-9">
                    <div style="display:flex; font-size:2em">
                            <p> @item.Lastname
                                @item.Firstname
                                @item.Middlename 
                            </p>
                    </div>
                    <div class="d-flex">
                        <p>@item.Email @item.NumberPhone</p>
                    </div>

                   
                    <p>@item.Position.NamePost</p>
                </div>

                <div class="top">
                    <form method="post">
                        <button type="submit" asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</button>
                    </form>
                </div>
                      
            </div>
        </div>
    </div>

    }
</div>